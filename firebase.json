{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/viewer/:envelope",
        "function": "socialcard",
        "region": "us-central1",
        "pinTag": true
      },
      {
        "source": "/farm/user/:user",
        "destination": "/farm.html"
      },
      {
        "source": "/farm",
        "destination": "/farm.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
