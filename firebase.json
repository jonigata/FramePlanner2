{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/viewer/:envelope",
        "function": "socialcard",
        "region": "us-central1",
        "pinTag": true
      },
      {
        "source": "/farm/user/:user",
        "destination": "/farm.html"
      },
      {
        "source": "/farm",
        "destination": "/farm.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }   
    ]
  }
}
